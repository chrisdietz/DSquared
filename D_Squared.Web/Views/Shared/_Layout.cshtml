<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Deposits Squared</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />   
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:#6E1E1F">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand custom-navbar" href="/">D<sup>2</sup></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a class="custom-navbar" href="/">Dashboard</a></li>
                    <li>
                        @Html.ActionLink("Daily Deposits", "Index", "DailyDeposit", null, new { @class = "custom-navbar" })
                    </li>
                    <li>
                        @Html.ActionLink("Sales Forecasts", "Index", "SalesForecast", null, new { @class = "custom-navbar" })
                    </li>
                    @*<li class="dropdown">
                        <a href="" class="nav custom-navbar dropdown-toggle" data-toggle="dropdown">
                            Daily Deposits
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                @Html.ActionLink("Deposits", "Index", "DailyDeposit")
                            </li>
                            <li>
                                @Html.ActionLink("Reports", "DepositReport", "DailyDeposit")
                            </li>
                        </ul>
                    </li>*@
                </ul>
                <p class="nav navbar-text navbar-right">Hello, @User.Identity.Name!</p>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @Html.Partial("_Alerts")
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - D<sup>2</sup></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $(".date-picker").datepicker({
                changeMonth: true,
                changeYear: true,
                yearRange: "-1:+0",
                dateFormat: 'mm-dd-yy'
            });
        });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
