@model D_Squared.Web.Models.PaidInOutSearchViewModel
@using D_Squared.Domain.TransferObjects
@section Scripts{
    <script src="~/App_Scripts/LaborReports/SearchInit.js" type="text/javascript"></script>
}
@{
    string reportType = string.Empty;
    if (Model.SearchDTO.SelectedDayOrWeekFilter == PaidInOutSearchDTO.ReportByDay)
    {
        reportType = (Model.SearchDTO.SelectedAccountTypeFilter == PaidInOutSearchDTO.ReportByPaidIn) ? "Paid In/Out Report by Date/Paid In" : "Paid In/Out Report by Date/Paid Out";
    }
    else
    {
        reportType = (Model.SearchDTO.SelectedAccountTypeFilter == PaidInOutSearchDTO.ReportByPaidIn) ? "Paid In/Out Report by Week/Paid In" : "Paid In/Out Report by Week/Paid Out";
    }

}
<style type="text/css">
    dl {
        width: 100%;
        overflow: hidden;
        margin-left: 50px;
        margin-bottom: 0;
        padding: 0
    }

    dt {
        float: left;
        width: 50%;
        /* adjust the width; make sure the total of both is 100% */
        margin: 0;
        padding: 0
    }

    dd {
        float: left;
        width: 50%;
        /* adjust the width; make sure the total of both is 100% */
        margin: 0;
        padding: 0
    }

    tbody {
        text-align: left;
    }

    tfoot {
        font-weight: bold;
        text-align: right;
    }
</style>

<div class="jumbotron" style="background-image: url('/Content/images/lightwood-bg.jpg'); padding-bottom:5px; padding-top:20px; margin-bottom:10px">
    <div class="row">
        <div class="col-md-4">
            <div style="max-width:500px; display: block; margin: 0 auto;float:left;">
                <img src="~/Content/images/millers_d2_logo.png" style="max-width:300px;" />
            </div>
        </div>
        <div class="col-md-4">
            <div class="text-center" style="display: block; margin: 0 auto; max-width:600px">
                <h2>Paid In/Out Report</h2>
                <p class="lead">
                    Location: <strong><u>@Model.EmployeeInfo.StoreNumber</u></strong>
                </p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="text-center" style="display: block; margin: 0 auto; max-width:400px">
                <p class="lead">
                    Time: @DateTime.Now.ToLocalTime().ToString()
                    <br />
                    Employee: @Model.EmployeeInfo.FirstName @Model.EmployeeInfo.LastName
                </p>
            </div>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <a data-toggle="modal" href="#helpModal" class="btn btn-dsquared btn-sm" style="float:right; margin-left: 10px;"><i class="fa fa-question-circle" aria-hidden="true"></i></a>
    </div>
    <br />
    <br />
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="row">
            <div class="col-md-7">
                <div class="form-group">
                    @Html.LabelFor(model => model.LocationSelectList, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.DropDownListFor(model => model.SearchDTO.SelectedLocation, Model.LocationSelectList, htmlAttributes: new { @class = "locationSelect form-control select2-single select2-hidden-accessible" })
                        @Html.ValidationMessageFor(model => model.SearchDTO.SelectedLocation, string.Empty, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.SearchDTO.SelectedDate, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        <div class="input-group col-md-8">
                            @Html.EditorFor(model => model.SearchDTO.SelectedDate, new { htmlAttributes = new { @class = "form-control date-picker", onkeydown = "return false", onpaste = "return false" } })
                            @*@Html.TextBoxFor(m => m.SearchDTO.SelectedDate, new { @Value = Model.SearchDTO.SelectedDate.ToString("MM-dd-yyyy"), @class= "form-control datepicker" })*@
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-8">
                        <div class="input-group col-md-8 col-md-offset-6">
                            @Html.RadioButtonFor(m => m.SearchDTO.SelectedDayOrWeekFilter, PaidInOutSearchDTO.ReportByDay)&nbsp;&nbsp;<span><strong>By Date</strong></span>
                            &nbsp;&nbsp;&nbsp;&nbsp;
                            @Html.RadioButtonFor(m => m.SearchDTO.SelectedDayOrWeekFilter, PaidInOutSearchDTO.ReportByWeek)&nbsp;&nbsp;<span><strong>By Week</strong></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-8">
                        <div class="input-group col-md-8 col-md-offset-6">
                            @Html.RadioButtonFor(m => m.SearchDTO.SelectedAccountTypeFilter, PaidInOutSearchDTO.ReportByPaidIn)&nbsp;&nbsp;<span><strong>Paid In</strong></span>
                            &nbsp;&nbsp;&nbsp;&nbsp;
                            @Html.RadioButtonFor(m => m.SearchDTO.SelectedAccountTypeFilter, PaidInOutSearchDTO.ReportByPaidOut)&nbsp;&nbsp;<span><strong>Paid Out</strong></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-5">
                @if (Model.SearchDTO.SelectedDayOrWeekFilter == PaidInOutSearchDTO.ReportByWeek)
                {
                    <div class="panel panel-default firstRowPanel">
                        <div class="form-group">
                            <dl>
                                <dt>
                                    Business Week
                                </dt>
                                <dd>
                                    @Model.BusinessWeekStartDate.ToShortDateString() - @Model.BusinessWeekEndDate.ToShortDateString()
                                </dd>
                            </dl>
                        </div>
                    </div>
                }
            </div>
            <div class="col-md-1"></div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <div class="col-md-offset-4 col-md-8">
                        <input name="action:Search" type="submit" value="Search" class="btn btn-dsquared" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-horizontal">
        <div class="row" style="text-align:center">
            <h3>@reportType</h3>
        </div>
    </div>
    <hr />

    if (Model.SearchResults.Count > 0)
    {
    <table id="dtOvertime" class="table table-striped table-bordered table-responsive">
        <caption class="caption">
            Total Items: @Model.SearchResults.Count()
        </caption>
        <thead>
            <tr>
                @if (Model.SearchDTO.SelectedDayOrWeekFilter == PaidInOutSearchDTO.ReportByWeek)
                {
                    <th>
                        @Html.DisplayNameFor(model => model.SearchResults.FirstOrDefault().BusinessDate)
                    </th>
                }
                <th>
                    @Html.DisplayNameFor(model => model.SearchResults.FirstOrDefault().Receipt)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SearchResults.FirstOrDefault().AccountType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SearchResults.FirstOrDefault().AccountName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SearchResults.FirstOrDefault().ExpenseAmount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SearchResults.FirstOrDefault().EmployeeName)
                </th>
            </tr>
        </thead>
        <tbody>

            @{
                foreach (var result in Model.SearchResults)
                {
                    <tr>
                        @if (Model.SearchDTO.SelectedDayOrWeekFilter == PaidInOutSearchDTO.ReportByWeek)
                        {
                            <td>
                                @result.BusinessDate.ToShortDateString()
                            </td>
                        }
                        <td>
                            @result.Receipt
                        </td>
                        <td>
                            @result.AccountType
                        </td>
                        <td>
                            @result.AccountName
                        </td>
                        <td style="text-align:right">
                            @result.ExpenseAmount.ToString("C2")
                        </td>
                        <td>
                            @result.EmployeeName
                        </td>
                    </tr>
                }
            }

        </tbody>
        <tfoot>
            @{
            <tr>
                @if (Model.SearchDTO.SelectedDayOrWeekFilter == PaidInOutSearchDTO.ReportByWeek)
                {
                    <td colspan="4">
                        Total
                    </td>
                }
                else
                {
                    <td colspan="3">
                        Total
                    </td>
                }
                <td>
                    @Model.SearchResults.Sum(sd => sd.ExpenseAmount).ToString("C2")
                </td>
                <td>
                    &nbsp;
                </td>
            </tr>
            }
        <tfoot>
    </table>
    }
    else
    {
        <p class="text-center">
            <i>No Paid In/Out data found</i>
        </p>
    }
}

<!--must explicitly define the controller and action and pageHeaderKey. PageHeaderKey can be found in HelpDocument.cs-->
@{Html.RenderAction("ModalDetails", "Home", new { @controller = "SalesReporting", @action = "PaidInOut", @pageHeaderKey = "PaidInOut" });}

