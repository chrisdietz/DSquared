@model D_Squared.Web.Models.ServerSalesSearchViewModel
@using D_Squared.Domain.TransferObjects
@section Scripts{
    <script src="~/App_Scripts/LaborReports/SearchInit.js" type="text/javascript"></script>
}
@{
    string reportType = string.Empty;
    string businessWeek = "Current Week";
    if (Model.SearchDTO.SelectedDWBWFilter == ServerSalesSearchDTO.ReportByDay)
    {
        reportType = "Server Sales Report By Date";
    }
    else if (Model.SearchDTO.SelectedDWBWFilter == ServerSalesSearchDTO.ReportByWeek)
    {
        reportType = "Server Sales Report By Week";
    }
    else
    {
        reportType = "Server Sales Report By Bi-Weekly";
        businessWeek = "Bi-Weekly (Previous and Current Week)";
    }

}
<style type="text/css">
    dl {
        width: 100%;
        overflow: hidden;
        margin-left: 50px;
        margin-bottom: 0;
        padding: 0
    }

    dt {
        float: left;
        width: 50%;
        /* adjust the width; make sure the total of both is 100% */
        margin: 0;
        padding: 0
    }

    dd {
        float: left;
        width: 50%;
        /* adjust the width; make sure the total of both is 100% */
        margin: 0;
        padding: 0
    }

    tbody {
        text-align: right;
    }

    tfoot {
        font-weight: bold;
        text-align: right;
    }
</style>

<div class="jumbotron" style="background-image: url('/Content/images/lightwood-bg.jpg'); padding-bottom:5px; padding-top:20px; margin-bottom:10px">
    <div class="row">
        <div class="col-md-4">
            <div style="max-width:500px; display: block; margin: 0 auto;float:left;">
                <img src="~/Content/images/millers_d2_logo.png" style="max-width:300px;" />
            </div>
        </div>
        <div class="col-md-4">
            <div class="text-center" style="display: block; margin: 0 auto; max-width:600px">
                <h3>Server Sales Report - Search</h3>
                <p class="lead">
                    Location: <strong><u>@Model.EmployeeInfo.StoreNumber</u></strong>
                </p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="text-center" style="display: block; margin: 0 auto; max-width:400px">
                <p class="lead">
                    Time: @DateTime.Now.ToLocalTime().ToString()
                    <br />
                    Employee: @Model.EmployeeInfo.FirstName @Model.EmployeeInfo.LastName
                </p>
            </div>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <a data-toggle="modal" href="#helpModal" class="btn btn-dsquared btn-sm" style="float:right; margin-left: 10px;"><i class="fa fa-question-circle" aria-hidden="true"></i></a>
    </div>
    <br />
    <br />
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.LocationSelectList, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.DropDownListFor(model => model.SearchDTO.SelectedLocation, Model.LocationSelectList, htmlAttributes: new { @class = "locationSelect form-control select2-single select2-hidden-accessible" })
                        @Html.ValidationMessageFor(model => model.SearchDTO.SelectedLocation, string.Empty, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.EmployeeSelectList, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.DropDownListFor(model => model.SearchDTO.SelectedEmployee, Model.EmployeeSelectList, htmlAttributes: new { @class = "employeeSelect form-control select2-single select2-hidden-accessible" })
                        @Html.ValidationMessageFor(model => model.SearchDTO.SelectedEmployee, string.Empty, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.SearchDTO.SelectedDate, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        <div class="input-group col-md-8">
                            @Html.EditorFor(model => model.SearchDTO.SelectedDate, new { htmlAttributes = new { @class = "form-control date-picker", onkeydown = "return false", onpaste = "return false" } })
                            @*@Html.TextBoxFor(m => m.SearchDTO.SelectedDate, new { @Value = Model.SearchDTO.SelectedDate.ToString("MM-dd-yyyy"), @class= "form-control datepicker" })*@
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <div class="input-group col-md-10 col-md-offset-4">
                            @Html.RadioButtonFor(m => m.SearchDTO.SelectedDWBWFilter, ServerSalesSearchDTO.ReportByDay)&nbsp;&nbsp;<span><strong>By Date</strong></span>
                            &nbsp;&nbsp;&nbsp;&nbsp;
                            @Html.RadioButtonFor(m => m.SearchDTO.SelectedDWBWFilter, ServerSalesSearchDTO.ReportByWeek)&nbsp;&nbsp;<span><strong>By Week</strong></span>
                            &nbsp;&nbsp;&nbsp;&nbsp;
                            @Html.RadioButtonFor(m => m.SearchDTO.SelectedDWBWFilter, ServerSalesSearchDTO.ReportByBiWeekly)&nbsp;&nbsp;<span><strong>By Bi-Weekly</strong></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                @if (Model.SearchDTO.SelectedDWBWFilter == ServerSalesSearchDTO.ReportByWeek || Model.SearchDTO.SelectedDWBWFilter == ServerSalesSearchDTO.ReportByBiWeekly)
                {
                    <div class="panel panel-default firstRowPanel">
                        <div class="form-group" style="padding-top:10px">
                            <dl>
                                <dt>
                                    @businessWeek
                                </dt>
                                <dd>
                                    @Model.BusinessWeekStartDate.ToShortDateString() - @Model.BusinessWeekEndDate.ToShortDateString()
                                </dd>
                            </dl>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <div class="col-md-offset-4 col-md-8">
                        <input name="action:Search" type="submit" value="Search" class="btn btn-dsquared" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-horizontal">
        <div class="row" style="text-align:center">
            <h3>@reportType</h3>
        </div>
    </div>
    <hr />

    if (Model.SearchResults.Count > 0)
    {
    <table id="dtOvertime" class="table table-striped table-bordered table-responsive">
        <caption class="caption">
            Total Items: @Model.SearchResults.Count()
        </caption>
        <thead>
            <tr>
                @if (Model.SearchDTO.SelectedDWBWFilter == ServerSalesSearchDTO.ReportByWeek || Model.SearchDTO.SelectedDWBWFilter == ServerSalesSearchDTO.ReportByBiWeekly)
                {
                    <th>
                        @Html.DisplayNameFor(model => model.SearchResults.FirstOrDefault().BusinessDate)
                    </th>
                }
                <th>
                    @Html.DisplayNameFor(model => model.SearchResults.FirstOrDefault().EmployeeName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SearchResults.FirstOrDefault().TotalSales)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SearchResults.FirstOrDefault().FoodSales)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SearchResults.FirstOrDefault().FoodSalesPercent)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SearchResults.FirstOrDefault().LBWSales)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SearchResults.FirstOrDefault().LBWSalesPercent)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SearchResults.FirstOrDefault().NonAlcBevSales)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SearchResults.FirstOrDefault().NonAlcBevSalesPercent)
                </th>
            </tr>
        </thead>
        <tbody>

            @{
                foreach (var result in Model.SearchResults)
                {
            <tr>
                @if (Model.SearchDTO.SelectedDWBWFilter == ServerSalesSearchDTO.ReportByWeek || Model.SearchDTO.SelectedDWBWFilter == ServerSalesSearchDTO.ReportByBiWeekly)
                {
                    <td style="text-align:center">
                        @result.BusinessDate.ToShortDateString()
                    </td>
                }
                <td style="text-align:left">
                    @result.EmployeeName
                </td>
                <td>
                    @result.TotalSales.ToString("C2")
                </td>
                <td>
                    @result.FoodSales.ToString("C2")
                </td>
                <td>
                    @result.FoodSalesPercent.ToString("0.00")
                </td>
                <td>
                    @result.LBWSales.ToString("C2")
                </td>
                <td>
                    @result.LBWSalesPercent.ToString("0.00")
                </td>
                <td>
                    @result.NonAlcBevSales.ToString("C2")
                </td>
                <td>
                    @result.NonAlcBevSalesPercent.ToString("0.00")
                </td>
            </tr>
                }
            }

        </tbody>
    </table>
    }
    else
    {
        <p class="text-center">
            <i>No Server Sales data found</i>
        </p>
    }
}

<!--must explicitly define the controller and action and pageHeaderKey. PageHeaderKey can be found in HelpDocument.cs-->
@{Html.RenderAction("ModalDetails", "Home", new { @controller = "SalesReporting", @action = "ServerSalesSearch", @pageHeaderKey = "ServerSalesSearch" });}

