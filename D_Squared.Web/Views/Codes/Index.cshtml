@model IEnumerable<D_Squared.Domain.Entities.Code>

@{
    ViewBag.Title = "Index";
}
<br />
<h2>Codes Index</h2>

<table class="table table-striped table-bordered table-condensed table-hover table-responsive">
    <caption>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-dsquared btn-sm", @style = "float:right;" })
    </caption>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CodeCategory)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CodeValue)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CodeCategory)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CodeValue)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
