
@model D_Squared.Web.Models.TipPercentagePartialViewModel

<div class="modal fade" id="employeeSalesAndTipsModal" tabindex="-1" role="dialog" aria-labelledby="employeeSalesAndTipsModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="width:800px;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3 class="modal-title">TM Sales and Tips - Details</h3>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-default thirdRowPanelModal">
                            <div class="row">
                                <div class="col-md-6">
                                    <dl>
                                        <dt>
                                            @Html.DisplayNameFor(model => model.EmployeeName)
                                        </dt>
                                        <dd>
                                            @Model.EmployeeName
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.Job)
                                        </dt>
                                        <dd>
                                            @Model.Job
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.StoreNumber)
                                        </dt>
                                        <dd>
                                            @Model.StoreNumber
                                        </dd>

                                        <dt>
                                            Business Week
                                        </dt>
                                        <dd style="margin-bottom:5px">
                                            @Model.BusinessWeekStartDate.ToShortDateString() - @Model.BusinessWeekEndDate.ToShortDateString()
                                        </dd>
                                    </dl>
                                </div>
                                <div class="col-md-6">
                                    <dl>
                                        <dt>
                                            @Html.DisplayNameFor(model => model.YTDMAHAverageTipPercentage)
                                        </dt>
                                        <dd>
                                            @Model.YTDMAHAverageTipPercentage.ToString("0.00")
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.YTDStoreAverageTipPercentage)
                                        </dt>
                                        <dd>
                                            @Model.YTDStoreAverageTipPercentage.ToString("0.00")
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                            <div class="panel-body" style="overflow-y: scroll; height: 225px">
                                @if (Model.DetailResults.Count > 0)
                                {
                                    <table class="table table-striped table-bordered table-condensed table-hover table-responsive">
                                        <caption>
                                            Total Records: @Model.DetailResults.Count
                                        </caption>
                                        <thead>
                                            <tr>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.DetailResults.FirstOrDefault().BusinessDate)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.DetailResults.FirstOrDefault().Sales)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.DetailResults.FirstOrDefault().Tips)
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @for (int i = 0; i < Model.DetailResults.Count; i++)
                                            {
                                                <tr>
                                                    <td>
                                                        @Model.DetailResults[i].BusinessDate.ToShortDateString()
                                                    </td>
                                                    <td>
                                                        @Model.DetailResults[i].Sales.Value.ToString("C0")
                                                    </td>
                                                    <td>
                                                        @Model.DetailResults[i].Tips.Value.ToString("C0")
                                                    </td>
                                                </tr>
                                            }

                                    </table>
                                }
                                else
                                {
                                    <p class="text-center">
                                        <i>Sales and Tips Data for Bartender/Server not Found</i>
                                    </p>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


