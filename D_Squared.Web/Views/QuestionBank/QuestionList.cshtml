@model D_Squared.Web.Models.QuestionBankViewModel

@{
    ViewBag.Title = "Question List";
}
<br />
<h2>Questions</h2>
<div class="row">
    <div class="col-md-12">
        <div class="text-center" style="display: block; margin: 0 auto; max-width:600px">
            <p class="lead">
                Question Category: <strong><u>@Model.QuestionCategory.Category</u></strong>
            </p>
        </div>
    </div>
</div>
<table class="table table-striped table-bordered table-condensed table-hover table-responsive">
    <caption>
        @Html.ActionLink("Create New", "CreateQuestion", new { categoryId = Model.QuestionCategory.Id }, new { @class = "btn btn-dsquared btn-sm", @style = "float:right;" })
    </caption>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Question.Question)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Question.IsActive)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Questions)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Question)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DisplayIsActive)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditQuestion", new { id = item.Id }) |
            </td>
        </tr>
    }

</table>

<div>
    @Html.ActionLink("Back to Question Categories", "CategoryList")
</div>
