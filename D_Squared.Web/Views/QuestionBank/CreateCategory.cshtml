@model D_Squared.Web.Models.QuestionCategoryViewModel

@{
    ViewBag.Title = "Create Category";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Question Category</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.QuestionCategory.Category, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.QuestionCategory.Category, new { @class = "form-control", @style = "width:300px;" })
            @Html.ValidationMessageFor(model => model.QuestionCategory.Category, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.QuestionCategory.AllowQuestionsModification, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.QuestionCategory.AllowQuestionsModification, Model.YesNoDropdownList, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.QuestionCategory.AllowQuestionsModification, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-dsquared" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "CategoryList")
</div>

