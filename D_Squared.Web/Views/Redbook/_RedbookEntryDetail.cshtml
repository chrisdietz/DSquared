@model D_Squared.Web.Models.RedbookEntryDetailPartialViewModel

<div class="modal fade" id="detailModal" tabindex="-1" role="dialog" aria-labelledby="detailModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="width:800px;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3 class="modal-title">Redbook Details</h3>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="panel panel-default">
                            <div class="panel-heading lead" style="margin-bottom: 0px">
                                Sales Forecast Data
                            </div>
                            <div class="panel-body">
                                <div class="col-md-6">
                                    <dl>
                                        <dt>
                                            @Html.DisplayNameFor(model => model.SalesForecastDTO.DayOfWeek)
                                        </dt>
                                        <dd style="margin-bottom:5px">
                                            @Html.DisplayFor(model => model.SalesForecastDTO.DayOfWeek)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.SalesForecastDTO.PriorYearSales)
                                        </dt>
                                        <dd style="margin-bottom:5px">
                                            @Model.SalesForecastDTO.PriorYearSales.ToString("C0")
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.SalesForecastDTO.Prior2YearSales)
                                        </dt>
                                        <dd style="margin-bottom:5px">
                                            @Model.SalesForecastDTO.Prior2YearSales.ToString("C0")
                                        </dd>
                                    </dl>
                                </div>
                                <div class="col-md-6">
                                    <dl>
                                        <dt>
                                            @Html.DisplayNameFor(model => model.SalesForecastDTO.ForecastAmount)
                                        </dt>
                                        <dd style="margin-bottom:5px">
                                            @Model.SalesForecastDTO.ForecastAmount.ToString("C0")
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.SalesForecastDTO.AverageSalesPerMonth)
                                        </dt>
                                        <dd style="margin-bottom:5px">
                                            @Model.SalesForecastDTO.AverageSalesPerMonth.ToString("C0")
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.SalesForecastDTO.LaborForecast)
                                        </dt>
                                        <dd style="margin-bottom:5px">
                                            @Model.SalesForecastDTO.LaborForecast.ToString("C0")
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="panel panel-default">
                            <div class="panel-heading lead" style="margin-bottom: 0px">
                                Shift Summary
                            </div>
                            <div class="panel-body">
                                <div class="col-md-6">
                                    <dl>
                                        <dt>
                                            @Html.DisplayNameFor(model => model.RedbookEntry.LocationId)
                                        </dt>
                                        <dd style="margin-bottom:5px">
                                            @Html.DisplayFor(model => model.RedbookEntry.LocationId)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.RedbookEntry.SelectedWeatherAM)
                                        </dt>
                                        <dd style="margin-bottom:5px">
                                            @Html.DisplayFor(model => model.RedbookEntry.SelectedWeatherAM)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.RedbookEntry.ManagerOnDutyAM)
                                        </dt>
                                        <dd style="margin-bottom:5px">
                                            @Html.DisplayFor(model => model.RedbookEntry.ManagerOnDutyAM)
                                        </dd>
                                    </dl>
                                </div>
                                <div class="col-md-6">
                                    <dl>
                                        <dt>
                                            @Html.DisplayNameFor(model => model.RedbookEntry.BusinessDate)
                                        </dt>
                                        <dd style="margin-bottom:5px">
                                            @Model.RedbookEntry.BusinessDate.ToShortDateString()
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.RedbookEntry.SelectedWeatherPM)
                                        </dt>
                                        <dd style="margin-bottom:5px">
                                            @Html.DisplayFor(model => model.RedbookEntry.SelectedWeatherPM)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.RedbookEntry.ManagerOnDutyPM)
                                        </dt>
                                        <dd style="margin-bottom:5px">
                                            @Html.DisplayFor(model => model.RedbookEntry.ManagerOnDutyPM)
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-default">
                            <div class="panel-heading lead" style="margin-bottom: 0px">
                                Daily Notes
                            </div>
                            <div class="panel-body" style="overflow-y: scroll; height: 250px">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="panel panel-default firstRowPanelModal">
                                            <div class="panel-body">
                                                <dl>
                                                    <dt>
                                                        Daily Notes
                                                    </dt>
                                                    <dd>
                                                        @Html.DisplayFor(model => model.RedbookEntry.DailyNotes)
                                                    </dd>
                                                </dl>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="panel panel-default firstRowPanelModal">
                                            <div class="panel-body">
                                                <dl>
                                                    <dt>
                                                        @Html.DisplayNameFor(model => model.RedbookEntry.FoodAndBeverage)
                                                    </dt>
                                                    <dd>
                                                        @Html.DisplayFor(model => model.RedbookEntry.FoodAndBeverage)
                                                    </dd>
                                                </dl>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="panel panel-default firstRowPanelModal">
                                            <div class="panel-body">
                                                <dl>
                                                    <dt>
                                                        @Html.DisplayNameFor(model => model.RedbookEntry.FoodAndBeverage)
                                                    </dt>
                                                    <dd>
                                                        @Html.DisplayFor(model => model.RedbookEntry.FoodAndBeverage)
                                                    </dd>
                                                </dl>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="panel panel-default secondRowPanelModal">
                                            <div class="panel-body">
                                                <dl>
                                                    <dt>
                                                        @Html.DisplayNameFor(model => model.RedbookEntry.ToDoToday)
                                                    </dt>
                                                    <dd>
                                                        @Html.DisplayFor(model => model.RedbookEntry.ToDoToday)
                                                    </dd>
                                                </dl>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="panel panel-default secondRowPanelModal">
                                            <div class="panel-body">
                                                <dl>
                                                    <dt>
                                                        @Html.DisplayNameFor(model => model.RedbookEntry.MPower)
                                                    </dt>
                                                    <dd>
                                                        @Html.DisplayFor(model => model.RedbookEntry.MPower)
                                                    </dd>
                                                </dl>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="panel panel-default secondRowPanelModal">
                                            <div class="panel-body">
                                                <dl>
                                                    <dt>
                                                        @Html.DisplayNameFor(model => model.RedbookEntry.EmployeeNotes)
                                                    </dt>
                                                    <dd>
                                                        @Html.DisplayFor(model => model.RedbookEntry.EmployeeNotes)
                                                    </dd>
                                                </dl>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="panel panel-default thirdRowPanelModal">
                                            <div class="panel-body">
                                                <dl>
                                                    <dt>
                                                        @Html.DisplayNameFor(model => model.RedbookEntry.LSMActivities)
                                                    </dt>
                                                    <dd>
                                                        @Html.DisplayFor(model => model.RedbookEntry.LSMActivities)
                                                    </dd>
                                                </dl>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-8">
                        <div class="panel panel-default thirdRowPanelModal">
                            <div class="panel-heading lead" style="margin-bottom: 0px">
                                Competitive Events
                            </div>
                            <div class="panel-body" style="overflow-y: scroll; height: 225px">
                                @if (Model.CompetitiveEventListViewModel.CompetitiveEvents.Count > 0)
                                {
                                    <table class="table table-striped table-bordered table-condensed table-hover table-responsive">
                                        <caption>
                                            Total Audits: @Model.CompetitiveEventListViewModel.CompetitiveEvents.Count()
                                        </caption>
                                        <thead>
                                            <tr>
                                                <td>
                                                    @Html.DisplayNameFor(model => model.CompetitiveEventListViewModel.CompetitiveEvents.FirstOrDefault().Date)
                                                </td>
                                                <td>
                                                    @Html.DisplayNameFor(model => model.CompetitiveEventListViewModel.CompetitiveEvents.FirstOrDefault().EventType)
                                                </td>
                                                <td>
                                                    @Html.DisplayNameFor(model => model.CompetitiveEventListViewModel.CompetitiveEvents.FirstOrDefault().EventName)
                                                </td>
                                                <td>
                                                    @Html.DisplayNameFor(model => model.CompetitiveEventListViewModel.CompetitiveEvents.FirstOrDefault().Distance)
                                                </td>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var e in Model.CompetitiveEventListViewModel.CompetitiveEvents)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(model => e.Date)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(model => e.EventType)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(model => e.EventName)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(model => e.Distance)
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                }
                                else
                                {
                                    <p class="text-center">
                                        <i>No Competitive Events Found</i>
                                    </p>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="panel panel-default thirdRowPanelModal">
                            <div class="panel-heading lead" style="margin-bottom: 0px">
                                Sales Events
                            </div>
                            <div class="panel-body" style="overflow-y: scroll; height: 225px">
                                @if (Model.EventDTOs.Count > 0)
                                {
                                    <dl>
                                        @foreach (var ev in Model.EventDTOs)
                                        {
                                            <dt style="margin-bottom:5px">
                                                @Html.DisplayFor(model => ev.Event)
                                            </dt>

                                        }
                                    </dl>
                                }
                                else
                                {
                                    <p class="text-center">
                                        <i>No Events Affecting Sales Found</i>
                                    </p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
