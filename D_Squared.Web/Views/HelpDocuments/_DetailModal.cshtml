@model D_Squared.Domain.Entities.HelpDocument

<div class="modal fade" id="helpModal" tabindex="-1" role="dialog" aria-labelledby="helpModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3 class="modal-title">@Model.ControllerName @Model.ActionName Help Document</h3>
            </div>
            <div class="modal-body text-center" style="font-size:18px">
                 @Html.Raw(Server.HtmlDecode(Model.HelpHtml))
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
