<table class="table table-striped table-bordered table-responsive">
    <caption class="caption">
        Total Items: @Model.SearchResults.Count()
    </caption>
    <thead>
        <tr>
            <th>
                Location
                @*@Html.DisplayNameFor(model => model.SearchResults.FirstOrDefault().StoreNumber)*@
            </th>
            <th>
                Week Ending
                @*@Html.DisplayNameFor(model => model.SearchResults.FirstOrDefault().FiscalWeekEnding)*@
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.SearchResults.FirstOrDefault().ForecastAmount)*@
                Fcst Amount
            </th>
            <th>
                FY17 Sales
                @*@Html.DisplayNameFor(model => model.SearchResults.FirstOrDefault().ActualPriorYear)*@
            </th>
            <th>
                FY16 Sales
                @*@Html.DisplayNameFor(model => model.SearchResults.FirstOrDefault().ActualPrior2Years)*@
            </th>
            <th>
                6 Week Avg
                @*@Html.DisplayNameFor(model => model.SearchResults.FirstOrDefault().AvgPrior4Weeks)*@
            </th>
            <th>
                Labor Fcst
                @*@Html.DisplayNameFor(model => model.SearchResults.FirstOrDefault().LaborForecast)*@
            </th>
            <th>
                FOH Labor
            </th>
            <th>
                FOH Var
            </th>
            <th>
                BOH Labor
            </th>
            <th>
                BOH Var
            </th>
            <th>
                Total Labor
            </th>
            <th>
                Total Var
            </th>
            <th style="width:70px">
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var result in Model.SearchResults)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => result.StoreNumber)
                </td>

                <td>
                    @result.FiscalWeekEnding.ToShortDateString()
                </td>

                <td>
                    @result.Calculations.SalesForecastColumnTotalsDTO.ForecastAmountTotal.ToString("C0")
                    @*@result.ForecastAmount.ToString("C0")*@
                </td>

                <td>
                    @result.Calculations.SalesForecastColumnTotalsDTO.PriorYearSalesTotal.ToString("C0")
                </td>

                <td>
                    @result.Calculations.SalesForecastColumnTotalsDTO.Prior2YearSalesTotal.ToString("C0")
                </td>

                <td>
                    @result.Calculations.SalesForecastColumnTotalsDTO.AverageSalesPerMonthTotal.ToString("C0")
                </td>

                <td>
                    @result.Calculations.SalesForecastColumnTotalsDTO.LaborForecastTotal.ToString("C0")
                </td>

                <td>
                    @result.Calculations.RecommendedFOHLabor.ToString("C0")
                </td>

                @if (result.Calculations.VarianceFOH > 0 && result.Calculations.RecommendedFOHLabor != -1)
                {
                    <td>
                        <span style="color:red"><strong>@result.Calculations.VarianceFOH.ToString("C0")</strong></span>
                    </td>
                }
                else if (result.Calculations.VarianceFOH <= 0 && result.Calculations.RecommendedFOHLabor != -1)
                {
                    <td>
                        <span><strong>@result.Calculations.VarianceFOH.ToString("C0")</strong></span>
                    </td>
                }
                else
                {
                    <td>
                        <span><strong>N/A</strong></span>
                    </td>
                }

                <td>
                    @result.Calculations.RecommendedBOHLabor.ToString("C0")
                </td>

                @if (result.Calculations.VarianceBOH > 0 && result.Calculations.RecommendedBOHLabor != -1)
                {
                    <td>
                        <span style="color:red"><strong>@result.Calculations.VarianceBOH.ToString("C0")</strong></span>
                    </td>
                }
                else if (result.Calculations.VarianceBOH <= 0 && result.Calculations.RecommendedBOHLabor != -1)
                {
                    <td>
                        <span><strong>@result.Calculations.VarianceBOH.ToString("C0")</strong></span>
                    </td>
                }
                else
                {
                    <td>
                        <span><strong>N/A</strong></span>
                    </td>
                }

                <td>
                    @result.Calculations.RecommendedFOHLabor.ToString("C0")
                </td>

                @if (result.Calculations.Variance > 0 && result.Calculations.RecommendedLabor != -1)
                {
                    <td>
                        <span style="color:red"><strong>@result.Calculations.Variance.ToString("C0")</strong></span>
                    </td>
                }
                else if (result.Calculations.Variance <= 0 && result.Calculations.RecommendedLabor != -1)
                {
                    <td>
                        <span><strong>@result.Calculations.Variance.ToString("C0")</strong></span>
                    </td>
                }
                else
                {
                    <td>
                        <span><strong>N/A</strong></span>
                    </td>
                }

                <td style="width:70px">
                    <a class="btn btn-xs btn-dsquared" onclick="GetSalesForecastDetailEditModal('@result.FiscalWeekEnding.ToShortDateString()', '@result.StoreNumber')">Edit/Details</a>
                    @*<a class="btn btn-xs btn-dsquared" onclick="GetSalesForecastDetail('@result.FiscalWeekEnding.ToShortDateString()')">Details</a>*@
                    @*<a class="btn btn-dsquared btn-xs" onclick="GetSalesForecastEditModal(@result.)">Edit</a>*@
                </td>
            </tr>
        }
    </tbody>
</table>


