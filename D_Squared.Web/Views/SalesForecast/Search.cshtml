@model D_Squared.Web.Models.SalesForecastSearchViewModel

@section Scripts{
    <script src="~/App_Scripts/SalesForecast/SearchInit.js" type="text/javascript"></script>
    <script src="~/App_Scripts/SalesForecast/EditInit.js" type="text/javascript"></script>
}

<div class="jumbotron" style="background-image: url('/Content/images/lightwood-bg.jpg'); padding-bottom:5px; padding-top:20px; margin-bottom:10px">
    <div style="max-width:500px; display: block; margin: 0 auto;">
        <img src="~/Content/images/millers_d2_logo.png" style="max-width:500px;" />
    </div>
    <div class="text-center" style="display: block; margin: 0 auto; max-width:500px">
        <h2>Sales Forecast Search</h2>
        <p class="lead">
            Employee: @Model.EmployeeInfo.FirstName @Model.EmployeeInfo.LastName
            <br />
            <br />
            Access Time: @DateTime.Now.ToLocalTime().ToString()
            <br />
            <br />
        </p>
    </div>
</div>
<br />
<br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="row">
            <div id="searchPartial" class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.SearchViewModel.SearchDTO.StartDate, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        <div class="input-group col-md-8">
                            @Html.EditorFor(model => model.SearchViewModel.SearchDTO.StartDate, new { htmlAttributes = new { @class = "form-control date-picker", onkeydown = "return false", onpaste = "return false" } })
                            <span class="input-group-addon"> to </span>
                            @Html.EditorFor(model => model.SearchViewModel.SearchDTO.EndDate, new { htmlAttributes = new { @class = "form-control date-picker", onkeydown = "return false", onpaste = "return false" } })
                        </div>
                    </div>
                </div>

                @Html.Partial("~/Views/SalesForecast/_SearchPartial.cshtml", Model.SearchViewModel, new ViewDataDictionary(ViewData)
                {
                    TemplateInfo = new TemplateInfo()
                    {
                        HtmlFieldPrefix = "SearchViewModel"
                    }
                })

                <div class="form-group">
                    @Html.LabelFor(model => model.SearchViewModel.SearchDTO.ForecastAmountMin, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        <div class="input-group col-md-8">
                            @Html.EditorFor(model => model.SearchViewModel.SearchDTO.ForecastAmountMin, new { htmlAttributes = new { @class = "form-control" } })
                            <span class="input-group-addon"> to </span>
                            @Html.EditorFor(model => model.SearchViewModel.SearchDTO.ForecastAmountMax, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">


                <div class="form-group">
                    @Html.LabelFor(model => model.SearchViewModel.SearchDTO.ActualPriorYearMin, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        <div class="input-group col-md-8">
                            @Html.EditorFor(model => model.SearchViewModel.SearchDTO.ActualPriorYearMin, new { htmlAttributes = new { @class = "form-control" } })
                            <span class="input-group-addon"> to </span>
                            @Html.EditorFor(model => model.SearchViewModel.SearchDTO.ActualPriorYearMax, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SearchViewModel.SearchDTO.ActualPrior2YearsMin, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        <div class="input-group col-md-8">
                            @Html.EditorFor(model => model.SearchViewModel.SearchDTO.ActualPrior2YearsMin, new { htmlAttributes = new { @class = "form-control" } })
                            <span class="input-group-addon"> to </span>
                            @Html.EditorFor(model => model.SearchViewModel.SearchDTO.ActualPrior2YearsMax, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SearchViewModel.SearchDTO.AvgPrior4WeeksMin, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        <div class="input-group col-md-8">
                            @Html.EditorFor(model => model.SearchViewModel.SearchDTO.AvgPrior4WeeksMin, new { htmlAttributes = new { @class = "form-control" } })
                            <span class="input-group-addon"> to </span>
                            @Html.EditorFor(model => model.SearchViewModel.SearchDTO.AvgPrior4WeeksMax, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SearchViewModel.SearchDTO.LaborForecastMin, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        <div class="input-group col-md-8">
                            @Html.EditorFor(model => model.SearchViewModel.SearchDTO.LaborForecastMin, new { htmlAttributes = new { @class = "form-control" } })
                            <span class="input-group-addon"> to </span>
                            @Html.EditorFor(model => model.SearchViewModel.SearchDTO.LaborForecastMax, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <div class="col-md-offset-4 col-md-8">
                        <input id="searchSubmit" name="Search" type="submit" value="Search" class="btn btn-dsquared" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<hr />

<table class="table table-striped table-bordered table-responsive">
    <caption class="caption">
        Total Items: @Model.SearchResults.Count()
    </caption>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SearchResults.FirstOrDefault().StoreNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SearchResults.FirstOrDefault().BusinessDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SearchResults.FirstOrDefault().ForecastAmount)
            </th>
            <th>
                FY17 Sales
                @*@Html.DisplayNameFor(model => model.SearchResults.FirstOrDefault().ActualPriorYear)*@
            </th>
            <th>
                FY16 Sales
                @*@Html.DisplayNameFor(model => model.SearchResults.FirstOrDefault().ActualPrior2Years)*@
            </th>
            <th>
                6 Week Average
                @*@Html.DisplayNameFor(model => model.SearchResults.FirstOrDefault().AvgPrior4Weeks)*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SearchResults.FirstOrDefault().LaborForecast)
            </th>
            <th style="width:100px">
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var result in Model.SearchResults)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => result.StoreNumber)
                </td>
                <td>
                    @result.BusinessDate.ToShortDateString()
                </td>
                <td>
                    @result.ForecastAmount.ToString("C0")
                </td>
                <td>
                    @result.ActualPriorYear.ToString("C0")
                </td>
                <td>
                    @result.ActualPrior2Years.ToString("C0")
                </td>
                <td>
                    @result.AvgPrior4Weeks.ToString("C0")
                </td>
                <td>
                    @result.LaborForecast.ToString("C0")
                </td>
                <td style="width:110px">
                    <a class="btn btn-xs btn-dsquared" onclick="GetSalesForecastDetail('@result.BusinessDate.ToShortDateString()')">Details</a>
                    <a class="btn btn-dsquared btn-xs" onclick="GetSalesForecastEditModal(@result.Id)">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<!--sales forecast detail holder-->
<div id="salesForecastDetailPartial">
</div>

<div id="editPartial">
</div>

