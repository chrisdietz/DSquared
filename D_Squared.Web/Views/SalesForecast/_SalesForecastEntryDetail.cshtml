@model D_Squared.Web.Models.SalesForecastDetailPartialViewModel

<div class="modal fade" id="salesForecastDetailModal" tabindex="-1" role="dialog" aria-labelledby="SalesForecastDetailModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="width:800px;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3 class="modal-title">Sales Forecast Details</h3>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-default">
                            <div class="panel-heading lead" style="margin-bottom: 0px">
                                Sales Forecast Data
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <dl class="dl-horizontal">
                                            <dt>
                                                @Html.DisplayNameFor(model => model.SalesForecastDTO.DateOfEntry)
                                            </dt>
                                            <dd style="margin-bottom:5px">
                                                @Model.SalesForecastDTO.DateOfEntry.ToShortDateString()
                                            </dd>

                                        </dl>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <dl class="dl-horizontal">
                                            <dt>
                                                @Html.DisplayNameFor(model => model.SalesForecastDTO.DayOfWeek)
                                            </dt>
                                            <dd style="margin-bottom:5px">
                                                @Html.DisplayFor(model => model.SalesForecastDTO.DayOfWeek)
                                            </dd>

                                            <dt>
                                                @Html.DisplayNameFor(model => model.SalesForecastDTO.ForecastAmount)
                                            </dt>
                                            <dd style="margin-bottom:5px">
                                                @Model.SalesForecastDTO.ForecastAmount.ToString("C0")
                                            </dd>

                                            <dt>
                                                @Html.DisplayNameFor(model => model.SalesForecastDTO.PriorYearSales)
                                            </dt>
                                            <dd style="margin-bottom:5px">
                                                @Model.SalesForecastDTO.PriorYearSales.ToString("C0")
                                            </dd>

                                            <dt>
                                                @Html.DisplayNameFor(model => model.SalesForecastDTO.Prior2YearSales)
                                            </dt>
                                            <dd style="margin-bottom:5px">
                                                @Model.SalesForecastDTO.Prior2YearSales.ToString("C0")
                                            </dd>

                                            <dt>
                                                @Html.DisplayNameFor(model => model.SalesForecastDTO.AverageSalesPerMonth)
                                            </dt>
                                            <dd style="margin-bottom:5px">
                                                @Model.SalesForecastDTO.AverageSalesPerMonth.ToString("C0")
                                            </dd>

                                            <dt>
                                                @Html.DisplayNameFor(model => model.SalesForecastDTO.LaborForecast)
                                            </dt>
                                            <dd style="margin-bottom:5px">
                                                @Model.SalesForecastDTO.LaborForecast.ToString("C0")
                                            </dd>
                                        </dl>
                                    </div>
                                    <div class="col-md-6">
                                        <dl class="dl-horizontal">
                                            <dt>
                                                @Html.DisplayNameFor(model => model.Calculations.RecommendedFOHLabor)
                                            </dt>
                                            <dd style="margin-bottom:5px">
                                                @if (Model.Calculations.RecommendedFOHLabor != -1)
                                                {
                                                    @Model.Calculations.RecommendedFOHLabor.ToString("C0")
                                                }
                                                else
                                                {
                                                    <span>N/A</span>
                                                }
                                            </dd>

                                            <dt>
                                                @Html.DisplayNameFor(model => model.Calculations.VarianceFOH)
                                            </dt>
                                            <dd style="margin-bottom:5px">
                                                @if (Model.Calculations.VarianceFOH > 0 && Model.Calculations.RecommendedFOHLabor != -1)
                                                {
                                                    <span style="color:red"><strong>@Model.Calculations.VarianceFOH.ToString("C0")</strong></span>
                                                }
                                                else if (Model.Calculations.VarianceFOH <= 0 && Model.Calculations.RecommendedFOHLabor != -1)
                                                {
                                                    <span>@Model.Calculations.VarianceFOH.ToString("C0")</span>
                                                }
                                                else
                                                {
                                                    <span>N/A</span>
                                                }
                                            </dd>

                                            <dt>
                                                @Html.DisplayNameFor(model => model.Calculations.RecommendedBOHLabor)
                                            </dt>
                                            <dd style="margin-bottom:5px">
                                                @if (Model.Calculations.RecommendedBOHLabor != -1)
                                                {
                                                    @Model.Calculations.RecommendedBOHLabor.ToString("C0")
                                                }
                                                else
                                                {
                                                    <span>N/A</span>
                                                }
                                            </dd>

                                            <dt>
                                                @Html.DisplayNameFor(model => model.Calculations.VarianceBOH)
                                            </dt>
                                            <dd style="margin-bottom:5px">
                                                @if (Model.Calculations.VarianceBOH > 0 && Model.Calculations.RecommendedBOHLabor != -1)
                                                {
                                                    <span style="color:red"><strong>@Model.Calculations.VarianceBOH.ToString("C0")</strong></span>
                                                }
                                                else if (Model.Calculations.VarianceBOH <= 0 && Model.Calculations.RecommendedBOHLabor != -1)
                                                {
                                                    <span>@Model.Calculations.VarianceBOH.ToString("C0")</span>
                                                }
                                                else
                                                {
                                                    <span>N/A</span>
                                                }
                                            </dd>

                                            <dt>
                                                @Html.DisplayNameFor(model => model.Calculations.RecommendedLabor)
                                            </dt>
                                            <dd style="margin-bottom:5px">
                                                @if (Model.Calculations.RecommendedLabor != -1)
                                                {
                                                    @Model.Calculations.RecommendedLabor.ToString("C0")
                                                }
                                                else
                                                {
                                                    <span>N/A</span>
                                                }
                                            </dd>

                                            <dt>
                                                @Html.DisplayNameFor(model => model.Calculations.Variance)
                                            </dt>
                                            <dd style="margin-bottom:5px">
                                                @if (Model.Calculations.Variance > 0 && Model.Calculations.RecommendedLabor != -1)
                                                {
                                                    <span style="color:red"><strong>@Model.Calculations.Variance.ToString("C0")</strong></span>
                                                }
                                                else if (Model.Calculations.Variance <= 0 && Model.Calculations.RecommendedLabor != -1)
                                                {
                                                    <span>@Model.Calculations.Variance.ToString("C0")</span>
                                                }
                                                else
                                                {
                                                    <span>N/A</span>
                                                }
                                            </dd>
                                        </dl>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-default thirdRowPanelModal">
                            <div class="panel-heading lead" style="margin-bottom: 0px">
                                Weekly Sales Forecast Data
                            </div>
                            <div class="panel-body" style="overflow-y: scroll; height: 225px">
                                @if (Model.Weekdays.Count > 0)
                                {
                                    <table class="table table-striped table-bordered table-condensed table-hover table-responsive">
                                        <caption>
                                            Total Records: @Model.Weekdays.Count()
                                        </caption>
                                        <thead>
                                            <tr>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Weekdays.FirstOrDefault().DayOfWeek)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Weekdays.FirstOrDefault().DateOfEntry)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Weekdays.FirstOrDefault().PriorYearSales)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Weekdays.FirstOrDefault().Prior2YearSales)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Weekdays.FirstOrDefault().AverageSalesPerMonth)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Weekdays.FirstOrDefault().ForecastAM)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Weekdays.FirstOrDefault().ForecastPM)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Weekdays.FirstOrDefault().ForecastAmount)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Weekdays.FirstOrDefault().LaborForecast)
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @for (int i = 0; i < Model.Weekdays.Count(); i++)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(model => model.Weekdays[i].DayOfWeek)
                                                    </td>
                                                    <td>
                                                        @Model.Weekdays[i].DateOfEntry.ToShortDateString()
                                                    </td>
                                                    <td>
                                                        @Model.Weekdays[i].PriorYearSales.ToString("C0")
                                                    </td>
                                                    <td>
                                                        @Model.Weekdays[i].Prior2YearSales.ToString("C0")
                                                    </td>
                                                    <td>
                                                        @Model.Weekdays[i].AverageSalesPerMonth.ToString("C0")
                                                    </td>
                                                    <td>
                                                        @Model.Weekdays[i].ForecastAM.ToString("C0")
                                                    </td>
                                                    <td>
                                                        @Model.Weekdays[i].ForecastPM.ToString("C0")
                                                    </td>
                                                    <td>
                                                        @Model.Weekdays[i].ForecastAmount.ToString("C0")
                                                    </td>
                                                    <td>
                                                        @Model.Weekdays[i].LaborForecast.ToString("C0")
                                                    </td>
                                                </tr>
                                            }

                                            <tr>
                                                <td colspan="2">
                                                    <strong style="float:right"><u>Column Totals:</u></strong>
                                                </td>
                                                <td>
                                                    <strong>
                                                        @Model.Calculations.SalesForecastColumnTotalsDTO.PriorYearSalesTotal.ToString("C0")
                                                    </strong>
                                                </td>
                                                <td>
                                                    <strong>
                                                        @Model.Calculations.SalesForecastColumnTotalsDTO.Prior2YearSalesTotal.ToString("C0")
                                                    </strong>
                                                </td>
                                                <td>
                                                    <strong>
                                                        @Model.Calculations.SalesForecastColumnTotalsDTO.AverageSalesPerMonthTotal.ToString("C0")
                                                    </strong>
                                                </td>
                                                <td>
                                                    <strong>
                                                        @Model.Calculations.SalesForecastColumnTotalsDTO.ForecastAMTotal.ToString("C0")
                                                    </strong>
                                                </td>
                                                <td>
                                                    <strong>
                                                        @Model.Calculations.SalesForecastColumnTotalsDTO.ForecastPMTotal.ToString("C0")
                                                    </strong>
                                                </td>
                                                <td>
                                                    <strong>
                                                        @Model.Calculations.SalesForecastColumnTotalsDTO.ForecastAmountTotal.ToString("C0")
                                                    </strong>
                                                </td>
                                                <td>
                                                    <strong>
                                                        @Model.Calculations.SalesForecastColumnTotalsDTO.LaborForecastTotal.ToString("C0")
                                                    </strong>
                                                </td>
                                            </tr>
                                    </table>
                                }
                                else
                                {
                                    <p class="text-center">
                                        <i>Sales Forecasts Found</i>
                                    </p>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

